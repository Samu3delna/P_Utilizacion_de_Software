@model P_Utilizacion_de_Software.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="form-container">
    <h2 class="text-center mb-4 text-primary">Iniciar Sesión</h2>
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="form-group mb-3">
            <label asp-for="Correo" class="control-label fw-bold"></label>
            <input asp-for="Correo" class="form-control" placeholder="nombre@ejemplo.com" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Contrasena" class="control-label fw-bold"></label>
            <input asp-for="Contrasena" class="form-control" placeholder="••••••" />
            <span asp-validation-for="Contrasena" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <input type="submit" value="Ingresar" class="btn btn-primary btn-lg" />
        </div>
    </form>
    <div class="mt-3 text-center">
        <a asp-action="Register">¿No tienes cuenta? Regístrate</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}