@model IEnumerable<P_Utilizacion_de_Software.Models.Tarea>
@{
    ViewData["Title"] = "Mis Tareas";
}

<h2 class="mb-4">Mis Tareas Asignadas</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No tienes tareas asignadas actualmente.</div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Proyecto</th>
                        <th>Tarea</th>
                        <th>Vence</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.Proyecto?.Nombre</td>
                            <td class="fw-bold">@t.Titulo</td>
                            <td>@t.FechaLimite.ToShortDateString()</td>
                            <td>
                                <span class="badge bg-@(t.Estado.ToString()=="Completada" ? "success" : (t.Estado.ToString()=="EnProgreso" ? "warning text-dark" : "secondary"))">
                                    @t.Estado
                                </span>
                            </td>
                            <td>
                                <a asp-controller="Tareas" asp-action="Edit" asp-route-id="@t.TareaId" class="btn btn-sm btn-outline-primary">Actualizar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}