@model P_Utilizacion_de_Software.Models.Proyecto
@{
    ViewData["Title"] = "Editar Proyecto";
}

<div class="form-container">
    <h2>Editar Proyecto</h2>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProyectoId" />

        <div class="form-group mb-3">
            <label asp-for="Nombre" class="fw-bold"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Descripcion" class="fw-bold"></label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
        </div>
        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="FechaInicio" class="fw-bold"></label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
            </div>
            <div class="col-6">
                <label asp-for="FechaFinalizacion" class="fw-bold"></label>
                <input asp-for="FechaFinalizacion" class="form-control" type="date" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Guardar Cambios</button>
        <div class="text-center mt-2">
            <a asp-action="Index">Cancelar</a>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}