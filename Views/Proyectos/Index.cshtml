@model IEnumerable<P_Utilizacion_de_Software.Models.Proyecto>

@{
    ViewData["Title"] = "Mis Proyectos";
    var esProfesor = User.IsInRole("Profesor");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Mis Proyectos</h1>
    @if (esProfesor)
    {
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> Nuevo Proyecto
        </a>
    }
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Proyecto</th>
                <th>Descripción</th>
                <th>Inicio</th>
                <th>Fin</th>
                @if (!esProfesor)
                {
                    <th>Profesor</th>
                }
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold text-primary">@item.Nombre</td>
                    <td>@(item.Descripcion?.Length > 50 ? item.Descripcion.Substring(0, 50) + "..." : item.Descripcion)</td>
                    <td>@item.FechaInicio.ToShortDateString()</td>
                    <td>@item.FechaFinalizacion.ToShortDateString()</td>
                    @if (!esProfesor)
                    {
                        <td>@item.ProfesorCreador?.Nombre</td>
                    }
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.ProyectoId" class="btn btn-sm btn-info text-white">Ver Tablero</a>
                        @if (esProfesor)
                        {
                            <a asp-action="Edit" asp-route-id="@item.ProyectoId" class="btn btn-sm btn-warning text-dark">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.ProyectoId" class="btn btn-sm btn-danger">X</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>